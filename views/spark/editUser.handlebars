<div class="col-sm-4 col-sm-offset-4">
</div>
<div class="well col-sm-8 col-sm-offset-2">
  <h2>Edit Profile</h2>
  <form action="/spark/editUser" method="post">
    <div class="form-group">
      <label for="fname">First Name</label>
      <input type="text" name="fname" value="" class="form-control">
    </div>
    <div class="form-group">
      <label for="lname">Last Name</label>
      <input type="text" name="lname" value="" class="form-control">
    </div>
    <div class="form-group">
      <label for="picture">Image Url</label>
      <input type="text" name="picture" value="" class="form-control">
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" name="email" value="" class="form-control">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" name="password" minlength="8" maxlength="22" class="form-control">
    </div>
    <div class="form-group">
      <label for="dob">Birthday</label>
      <input type="date" name="dob" class="form-control">
    </div>
    <div class="form-group">
      <label for="mile">Height</label>
      <input type="number" name="heightFeet" class="form-control" placeholder="Feet" min="0">
      <input type="number" name="heightInches" class="form-control" placeholder="Inches" max="11" min="0">
    </div>
    <div class="form-group">
      <label for="lname">Favorite Sports</label>
      <input type="text" name="sports" class="form-control">
    </div>
    <div class="form-group">
      <label for="lname">Favorite Players</label>
      <input type="text" name="players" value="" class="form-control">
    </div>
    <div class="form-group">
      <label for="lname">Favorite Foods</label>
      <input type="text" name="foods" value="" class="form-control">
    </div>
    <div class="form-group">
      <label for="lname">Dream Vacation</label>
      <input type="text" name="vacation" value="" class="form-control">
    </div>
    <div class="form-group">
      <label for="color">Favorite Color</label>
      <input type="text" name="color" value="" class="form-control">
    </div>
    <div class="form-group">
      <label for="lname">Youtube Intro</label>
      <input type="text" name="introLink" value="" class="form-control">
    </div>
    <button class="btn btn-warning">Save Changes</button>
  </form>
</div>
