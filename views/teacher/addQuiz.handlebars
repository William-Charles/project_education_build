<div class="col-sm-4 col-sm-offset-4">
  <h1>{{course.name}}</h1>
</div>
<div class="well col-sm-8 col-sm-offset-2">
  <h2>New Challenge</h2>
  <form action="/teacher/addChallenge/{{course.id}}" method="post">
    <div class="form-group">
      <label for="name">Title</label>
      <input type="text" name="name" value="" class="form-control" required="">
    </div>
    <div class="form-group">
      <label for="desc">Description</label>
      <textarea type="text" name="desc" value="" class="form-control" required=""></textarea>
    </div>
    <div class="form-group">
      <label for="notes">Theory Notes</label>
      <textarea type="text" name="notes" value="" class="form-control" required=""></textarea>
    </div>
    <div class="form-group">
      <label for="video">Video Url</label>
      <input type="text" name="video" minlength="8" maxlength="22" class="form-control" required="">
    </div>
    <div class="form-group">
      <label for="mock">Mock Up PDF</label>
      <input type="text" name="mock" minlength="8" maxlength="22" class="form-control">
    </div>
    <button class="btn btn-success">Add Challenge</button>
  </form>
</div>
