<div class="col-sm-4 col-sm-offset-4">
  <h1>Add Feature</h1>
</div>
<div class="well col-sm-4 col-sm-offset-4">
  <form action="/admin/addFeature" method="post">
    <div class="form-group">
      <label for="name">Feature Name</label>
      <input type="text" name="name" value="" class="form-control" required="required" minlength="5" maxlength="25">
    </div>
    <div class="form-group">
      <label for="desc">Feature Description</label>
      <textarea name="desc" value="" class="form-control" required="required" minlength="25" maxlength='200'>
      </textarea>
    </div>
    <button class="btn btn-success">Add Feature</button>
  </form>
</div>
